@{
    ViewData["Title"] = "[Yurii Krutsko] Trainee Camp .Net/Reenbit";
}

@model FormData;

<form asp-action="index" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <div class="col-6">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-mail address</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="mail@example.com">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FormFile" class="form-label">Choose the file</label>
                <input asp-for="FormFile" class="form-control" type="file" accept=".docx">
                <span asp-validation-for="FormFile" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Upload</button>
            </div>
        </div>
    </div>
</form>
